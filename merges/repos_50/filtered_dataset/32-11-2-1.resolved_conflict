		g.fillRect(0, 0, getWidth(), getHeight());
		g.setComposite(comp);
	}

	public BufferedImage saveImage() {
		BufferedImage result = new BufferedImage(getWidth(), getHeight(),
				BufferedImage.TYPE_4BYTE_ABGR);

		paintComponent(result.createGraphics());
		return result;
	}

